<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:car_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/car_learn_mountain_list"
    android:orientation="vertical"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:id="@+id/ll_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:background="@drawable/bg_borde_redondo_1dp">
        <ImageView
            android:id="@+id/iv_learn_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/logo_ilerna" />
        <TextView
            android:id="@+id/tv_learn_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="13sp"
            android:text="card subtitle"
            android:textColor="@color/yellow"
            android:textAllCaps="true"
            android:textStyle="italic"/>
        <TextView
            android:id="@+id/tv_learn_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textSize="18sp"
            android:text="Cart title"
            android:textStyle="italic|bold"/>
        <TextView
            android:id="@+id/tv_learn_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"
            android:text="@string/learnMountain_description"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>